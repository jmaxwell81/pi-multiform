        <operation_script><![CDATA[(function process(/*RESTAPIRequest*/ request, /*RESTAPIResponse*/ response) {

	var params;
	try{
		params = request.body.data;
		gs.info("Multiform API request body params = " +JSON.stringify(params));
	}catch(e){
		gs.error("Error occured " + e.getMessage());
		throw sn_ws_err.BadRequestError("malformed request");
	}
	
	var table = params.table;
	var gr = new GlideRecord(table);
	var fields = params.fields;
	for (var field in fields){
			gr.setValue(field, fields[field].value);
	}
	var result = {sys_id: gr.insert(),table: table, fields: fields};

	if(gs.nil(result)){
		response.setStatus(500);
	}
	else{
		response.setStatus(201);
	}
	return result;


})(request, response);]]></operation_script>
